#  Gemini Core Module

INTERFACE Domain {
    TEXT            code  *
    TRANSL_TEXT     description
}

ENTITY Entity {
    TEXT            name *
    TEXT            module
    BOOL            embedable
    TRANSL_TEXT     displayName
}

ENTITY Field {
    TEXT                name *
    Entity              entity *
    TEXT                type
    Entity              refEntity
    BOOL                isLogicalKey
    TRANSL_TEXT         displayName
    FieldCommonSettings commonSettings
    FieldGuiSettings    guiSettings
}

ENTITY ValueStrategy IMPLEMENTS Domain

ENTITY EMBEDABLE    BoolStrategy {
    ValueStrategy   strategy
    BOOL            value
}

ENTITY EMBEDABLE FieldCommonSettings   {
    # [Field]             dependencies
    BoolStrategy          visible
    BoolStrategy          modifiable
    BoolStrategy          required
    ValueStrategy         choiceDataStrategy
}

ENTITY EMBEDABLE FieldGuiSettings   {
    BOOL         useAsDesc
    LONG         sortKey
}

ENTITY InitRecord {
    Entity  entity          *
    TEXT    versionName     *
    LONG    versionNumber   *
}

ENTITY Language IMPLEMENTS Domain

ENTITY Translation {
    Entity          entity *
    Field           field  *
    LANGUAGE        language *
    # ENTITY_RECORD   recordKey
    TEXT            value
}


ENTITY FieldResolution {
    Field   field *
    TEXT    code *
    TEXT    value
}




