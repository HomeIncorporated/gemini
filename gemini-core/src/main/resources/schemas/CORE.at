#  Gemini Core Module

INTERFACE Domain {
    TEXT            code  *
    TRANSL_TEXT     description
}

ENTITY Entity {
    TEXT            name *
    TEXT            module
    TRANSL_TEXT     displayName
    [FIELD:entity]  fields      // collection of fields
}

ENTITY Field {
    TEXT            name *
    Entity          entity *
    TEXT            type
    Entity          refEntity
    BOOL            isLogicalKey
    TRANSL_TEXT     displayName
}

ENTITY InitRecord {
    Entity  entity          *
    TEXT    versionName     *
    LONG    versionNumber   *
}

ENTITY Language IMPLEMENTS Domain

ENTITY Translation {
    Entity          entity *
    Field           field  *
    LANGUAGE        language *
    # ENTITY_RECORD   recordKey
    TEXT            value
}


ENTITY ValueStrategy IMPLEMENTS Domain

ENTITY FieldResolution {
    Field   field *
    TEXT    code *
    TEXT    value
}




