#  ====  Gemini Core Module =====


# Meta information about a entity record (this is a special entity)
# All entities use CoreMeta as an interface for Meta Information
INTERFACE CoreMeta {
    DATETIME    created
    DATETIME    modified
}

INTERFACE Domain {
    TEXT            code  *
    TEXT		    description
}

ENTITY Entity {
    TEXT            name *
    TEXT            module
    BOOL            embedable
    BOOL            onerecord
    BOOL            closedDomain
}

ENTITY Field {
    TEXT                name    *1
    Entity              entity  *2
    TEXT                type
    TEXT                scope
    Entity              refEntity
    BOOL                isLogicalKey
    LONG                lkOrder
    Field               parentField
}

ENTITY ValueStrategy IMPLEMENTS Domain

ENTITY EMBEDABLE    BoolStrategy {
    ValueStrategy   strategy
    BOOL            value
}

ENTITY FieldCommonSettings   {
    Field                 field *
    BoolStrategy          visible
    BoolStrategy          modifiable
    BoolStrategy          required
}

ENTITY InitRecord {
    TEXT    entity          *
    TEXT    versionName     *
    LONG    versionNumber   *
}

ENTITY Language IMPLEMENTS Domain

ENTITY FieldResolution {
    Field   field *
    TEXT    code *
    TEXT    value
}

ENTITY SmartModule {
    TEXT        name *
    BOOL        dynamic
}