#  Gemini Core Module

INTERFACE Domain {
    TEXT            code  *
    TRANSL_TEXT     description
}

ENTITY Entity {
    TEXT            name *
    TEXT            module
    BOOL            embedable
    TRANSL_TEXT     displayName
}

ENTITY Field {
    TEXT            name *
    Entity          entity *
    TEXT            type
    Entity          refEntity
    BOOL            isLogicalKey
    TRANSL_TEXT     displayName
    FieldEvents     events
}

ENTITY EventType IMPLEMENTS Domain

ENTITY EMBEDABLE FieldControlEvent {
    EventType      eventType
    BOOL           value
}

ENTITY EMBEDABLE FieldEvents   {
    # [Field]             dependencies
    FieldControlEvent   visible
    FieldControlEvent   modifiable
    FieldControlEvent   required
    EventType           valueEventType
}

ENTITY InitRecord {
    Entity  entity          *
    TEXT    versionName     *
    LONG    versionNumber   *
}

ENTITY Language IMPLEMENTS Domain

ENTITY Translation {
    Entity          entity *
    Field           field  *
    LANGUAGE        language *
    # ENTITY_RECORD   recordKey
    TEXT            value
}


ENTITY FieldResolution {
    Field   field *
    TEXT    code *
    TEXT    value
}




