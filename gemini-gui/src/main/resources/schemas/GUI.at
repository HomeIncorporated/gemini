#  ====  Gemini GUI Module =====

ENTITY EntityGUI {
    Entity  entity  *
    TEXT    displayName
}

ENTITY FieldGUI {
    Field               field   *
    TEXT                displayName
    FieldGuiSettings    guiSettings
}

ENTITY EMBEDABLE FieldGuiSettings  {
    BOOL         useAsDesc
    LONG         sortKey
}

ENTITY GuiSettingsType IMPLEMENTS Domain

ENTITY GUISettings {
    TEXT                code *
    TEXT                displayName
    GuiSettingsType     type
    GENERIC_ENTITY_REF  genericRef
}

ENTITY ONEREC SideBarSettings {
    BOOL     active
    TEXT     mode
    BOOL     isCollapsed
}

ENTITY SideBarElemType IMPLEMENTS Domain

ENTITY SideBarElem {
    TEXT                code *
    TEXT                displayName
    SideBarElemType     type
    GENERIC_ENTITY_REF  genericRef
    TEXT                icon
    LONG                sortKey
}

ENTITY SmartModule {
    TEXT        name *
    BOOL        dynamic
    TEXT        title
    TEXT        description
    TEXT        schema
}