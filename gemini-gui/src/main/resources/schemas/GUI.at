#  ====  Gemini GUI Module =====

ENTITY EntityGUI {
    Entity  entity  *
    TEXT    displayName
}

ENTITY FieldGUI {
    Field               field   *
    TEXT                displayName
    FieldGuiSettings    guiSettings
}

ENTITY EMBEDABLE FieldGuiSettings  {
    BOOL         useAsDesc
    LONG         sortKey
}

ENTITY GuiSettingsType IMPLEMENTS Domain

ENTITY GUISettings {
    TEXT                code *
    TEXT                displayName
    GuiSettingsType     type
    GENERIC_ENTITY_REF  genericRef
    LONG                sortKey
}

ENTITY ONEREC SideBarSettings {
    BOOL     menuEnabled
    BOOL     searchEnabled
}

ENTITY ONEREC GeneralSettings {
    TEXT    appName
    TEXT    appTitle
}

ENTITY SideBarElemType IMPLEMENTS Domain

ENTITY TREE SideBarElem {
    TEXT                code *
    TEXT                displayName
    SideBarElemType     type
    GENERIC_ENTITY_REF  genericRef
    TEXT                icon
    LONG                sortKey
}

ENTITY SmartModule {
    TEXT        name *
    BOOL        dynamic
    TEXT        title
    TEXT        description
    TEXT        schema
}

ENTITY CustomComponents {
    TEXT        name *
    TEXT        description
}

ENTITY RouteReference {
    TEXT    key *
}

ENTITY RouteRefType IMPLEMENTS Domain

ENTITY RouteReferenceValue {
    RouteReference         refKey
    RouteRefType           refType
    GENERIC_ENTITY_REF     refValue
    NUMBER                 sortKey
}